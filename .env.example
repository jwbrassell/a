# Flask Configuration
FLASK_APP=app
FLASK_ENV=development
SECRET_KEY=generate_a_secure_key_here

# Database Type (mariadb or sqlite)
DB_TYPE=sqlite

# SQLite Configuration (used if DB_TYPE=sqlite)
SQLITE_PATH=instance/app.db

# MariaDB Configuration (used if DB_TYPE=mariadb)
DATABASE_USER=flask_app_user
DATABASE_PASSWORD=your_secure_password
DATABASE_HOST=localhost
DATABASE_NAME=portal_db

# Optional Vault Configuration
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=your_vault_token
